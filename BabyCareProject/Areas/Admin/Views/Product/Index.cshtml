
@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<h1>Ürünler</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Resmi</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Fiyat</th>
        <th>Eğitmen</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="height:75px;width:50px" />Profil Resmi</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Price </td>
            <td>@item.InstructorName </td>
            <td>
                <a href="/Admin/Product/Delete/@item.ProductId" class="btn btn-danger">Sil</a>
                <a href="/Admin/Product/Update/@item.ProductId" class="btn btn-info">Güncelle</a>
            </td>
        </tr>

    }
</table>
<a href="/Admin/Product/CreateProduct" class="btn btn-primary">Yeni Ürün</a>
